@page
@model WEBCW2.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card">
    <div class="card-body">
        <!--SEARCH SORT FILTER-->
        <div class="input-group">
            <input type="text" class="form-control" placeholder="SEARCH" aria-describedby="button-addon4">
            <div class="input-group-append" id="button-addon4">
                <button class="btn btn-outline-secondary" type="button">SORT</button>
                <button class="btn btn-outline-secondary" type="button">FILTER</button>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-3">
                    <!--BOOK 1-->
                    @foreach (var item in Model.Book)
                    {
                        <div class="col mb-4">
                            <a asp-page="/Books/Details" asp-route-id="@item.ID">
                                <div class="card h-100">
                                    <img src=@Html.DisplayFor(modelItem => item.Image) class="card-img-top" alt=@Html.DisplayFor(modelItem => item.Image)>
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.BookTitle)</h5>
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.Author)</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
