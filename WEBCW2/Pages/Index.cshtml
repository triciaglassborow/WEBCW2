@page
@model WEBCW2.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card">
    <div class="card-body">
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-3">
                <!--Displayes each book in it's own card-->
                @foreach (var item in Model.Book)
                {
                    @if (Model.count < 12)
                    {
                        <div class="col mb-4">
                            <a asp-page="/Books/Details" asp-route-id="@item.ID">
                                <div class="card h-100">
                                    <!--Displays image of book-->
                                    <img src=@Html.DisplayFor(modelItem => item.Image) class="card-img-top" alt=@Html.DisplayFor(modelItem => item.Image)>
                                    <div class="card-body">
                                        <!--Displays book details-->
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.BookTitle)</h5>
                                        <p class="card-text">
                                            @foreach (var author in Model.Author)
                                            {
                                                if (item.AuthorID == author.ID)
                                                {
                                                <p>
                                                        @Html.DisplayFor(modelItem => author.FirstName)
                                                        @Html.DisplayFor(modelItem => author.LastName)
                                                </p>
                                                }
                                            }
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        Model.count++;
                    }
                }
            </div>
        </div>
    </div>
</div>
