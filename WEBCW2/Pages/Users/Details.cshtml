@page
@model WEBCW2.Pages.Users.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card">
    <div class="card-body">
        <div class="row">
            <!--Left side -->
            <div class="col-md-6">
                <h4>User</h4>
                <hr />
                <dl class="row">

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.LastName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.LastName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.User.FirstName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.User.FirstName)
                    </dd>
                    <dt class="col-sm-4">
                        <p>Longest time spent reading</p>
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.LongestTime != null)
                        {
                            @Html.DisplayFor(model => model.LongestTime)
                        }
                    </dd>
                    <dt class="col-sm-4">
                        <p>Average time spent reading</p>
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.LongestTime != null)
                        {
                            @Html.DisplayFor(model => model.TotalTime)
                        }
                    </dd>
                    <dt class="col-sm-4">
                        <p>Comedy Books read</p>
                    </dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ComedyCount)</dd>
                    <dt class="col-sm-4">
                        <p>Tragedy Books read</p>
                    </dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TragedyCount)</dd>
                    <dt class="col-sm-4">
                        <p>Adventure Books read</p>
                    </dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AdventureCount)</dd>
                    <dt class="col-sm-4">
                        <p>Horror Books read</p>
                    </dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HorrorCount)</dd>
                </dl>
            </div>

            <!-- Right side -->
            <div class="col-md-6">
                    <br></br>
                    <br></br>

              
               
                <dt class="col-sm-4">
                    <p>Fantasy Books read</p>
                </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FantasyCount)</dd>
                <dt class="col-sm-4">
                    <p>SciFi Books read</p>
                </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SciFiCount)</dd>
                <dt class="col-sm-4">
                    <p>Mystery Books read</p>
                </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MysteryCount)</dd>
                <dt class="col-sm-4">
                    <p>Thriller Books read</p>
                </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ThrillerCount)</dd>
                <dt class="col-sm-4">
                    <p>Romance Books read</p>
                </dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.RomanceCount)</dd>
            </div>
        </div>

        <!--center -->
        <div class="mt-4">
            <h3>Books Read</h3>
            @if (Model.Stats.Count != 0)
            {
                <table class="table">
                    @foreach (var item in Model.Stats)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.BookID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Book.BookTitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.Book.AuthorID)</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>You have read no books</p>
            }
        </div>
    </div>
</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.User?.ID">Edit</a> |
	<a asp-page="../Stats/Edit" asp-route-id="@Model.User?.ID">Add book</a> |
	<a asp-page="./Index">Back to List</a>
</div>
