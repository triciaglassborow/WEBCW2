@page
@model WEBCW2.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookTitle)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Genre)
        </dd>
        <dt class="col-sm-2">
            Blurb
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Blurb)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.EndDate)
        </dd>
        <dt class="col-sm-2">
            Cover
        </dt>
        <dd class="col-sm-10">
            <img src=@Html.DisplayFor(model => model.Book.Image) class="card-img-top" alt=@Html.DisplayFor(model => model.Book.Image)>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <div>
        <a asp-page="../Index">Back to Home</a>
    </div>
</div>
